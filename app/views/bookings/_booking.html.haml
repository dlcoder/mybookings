- booking.events.each do |event|
  %tr{ class: bootstrap_class_for(event.status) }
    %td= event.resource_name
    %td= t("bookings.statuses.#{event.status}")
    %td= l event.start_date, format: :long
    %td= l event.end_date, format: :long
    %td
      = show_specific_actions_for event
      - if event.pending?
        = link_to_delete t('.cancel_event'), event_path(event.id), t('delete_confirmation'), class: 'btn btn-default btn-xs'
      - if event.expired? && !event.has_feedback?
        = link_to t('.send_feedback'), booking_edit_feedback_path(booking.id), class: 'btn btn-default btn-xs'
