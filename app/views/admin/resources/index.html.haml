= title

- if @resources.any?
  = table_for @resources, :id, :resource_type, :name, :pending_bookings

  = content_for :actions do
    = link_to icon_with_text('plus', t('.new_resource')), new_admin_resource_path, class: 'btn btn-primary'

- else
  .lead
    %p= t('.no_resources')
    %p= link_to icon_with_text('plus', t('.new_resource')), new_admin_resource_path, class: 'btn btn-primary'
