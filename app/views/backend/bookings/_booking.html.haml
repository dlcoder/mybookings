%dl.panel{ class: "panel-#{bootstrap_class_for(booking.events.first.status)}" }
  .panel-heading
    .row
      .col-xs-9
        = icon_with_text('envelope', booking.user_email)
      .col-xs-3.text-right
        %span.label{ class: "label-#{bootstrap_class_for(booking.events.first.status)}" }= t("bookings.statuses.#{booking.events.first.status}")
  .panel-body
    .row
      .col-xs-12.col-md-4
        %dt= icon_with_text('time', t('.booking_date'))
        %dd= l booking.created_at, format: :long
      .col-xs-12.col-md-4
        %dt= icon_with_text('time', t('.start_date'))
        %dd= l booking.events.first.start_date, format: :long
      .col-xs-12.col-md-4
        %dt= icon_with_text('time', t('.end_date'))
        %dd= l booking.events.first.end_date, format: :long
    - unless booking.comment.blank?
      %hr
      .row
        .col-xs-12
          %dt= icon_with_text('comment', t('.comment'))
          %dd= booking.comment
    - unless booking.feedback.blank?
      %hr
      .row
        .col-xs-12
          %dt= icon_with_text('pencil', t('.feedback'))
          %dd= booking.feedback
    - if booking.pending?
      %hr
        = link_to t('.cancel_booking'), backend_resource_booking_delete_confirmation_path(resource.id, booking.id)

