%dl.panel{ class: "panel-#{bootstrap_class_for(booking.status)}" }
  .panel-heading
    .row
      .col-xs-8
        = icon_with_text('envelope', booking.user_email)
      .col-xs-4.text-right
        %span.label{ class: "label-#{bootstrap_class_for(booking.status)}" }= t("bookings.statuses.#{booking.status}")
        - if booking.pending?
          %span
            = link_to icon_with_text('remove', t('bookings.booking.cancel_booking')), backend_resource_booking_delete_confirmation_path(resource.id, booking.id), class: 'btn btn-danger btn-xs'
  .panel-body
    .row
      .col-xs-12.col-md-4
        %dt= icon_with_text('time', t('.booking_date'))
        %dd= l booking.created_at, format: :long
      .col-xs-12.col-md-4
        %dt= icon_with_text('time', t('.start_date'))
        %dd= l booking.start_date, format: :long
      .col-xs-12.col-md-4
        %dt= icon_with_text('time', t('.end_date'))
        %dd= l booking.end_date, format: :long
    - unless booking.comment.blank?
      %hr
      .row
        .col-xs-12
          %dt= icon_with_text('comment', t('.comment'))
          %dd= booking.comment
    - unless booking.feedback.blank?
      %hr
      .row
        .col-xs-12
          %dt= icon_with_text('pencil', t('.feedback'))
          %dd= booking.feedback
